                    {% extends 'base.html.twig' %}

                    {% block title %}Hello BlogController!{% endblock %}

                    {% block body %}
                    <section class="articles">
                    {% for article in articles %}
                    <article>
          
                    
                    <h2>{{ article.title}}</h2>
                    <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/y')}} à {{ article.createdAt | date('H:i ')}} dans la catégorie {{
                         article.category.title }} </div>
                   
               <div class="content">
                    <img src="{{ article.image}}"  alt="">
               <p>{{ article.content | raw}} </p>
               <a href="{{path('blog_show', {'id':article.id}) }}" class="btn btn-primary">Lire la suite</a>  
               <form method="post" action="{{ path('delete', {id: article.id}) }}">  <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
               
              
               </form>
               </div>
               </article>

               <section id="commantaires">
                     {% for comment in article.comments %}
                    <div class="comment">
                         <div class="row">
                         <div class="col-3">
                         {{ comment.author}} (<small>{{ comment.createdAt | date( 'd/m/y à H:i' )}})</small>)

                         </div>
                            <div class="col-">
                            {{ comment.content | raw}} 
                                   
                             </div>
                              </div>
                                {% endfor %}


                    </section>
                {% endfor %}

               {% endblock %}
